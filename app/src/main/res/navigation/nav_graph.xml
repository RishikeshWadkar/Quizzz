<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startPlaying">
    <fragment
        android:id="@+id/startPlaying"
        android:name="com.rishikeshwadkar.gamequiz.StartPlaying"
        android:label="fragment_start_playing"
        tools:layout="@layout/fragment_start_playing" >
        <action
            android:id="@+id/action_startPlaying_to_firstQuestion"
            app:destination="@id/firstQuestion" />
    </fragment>
    <fragment
        android:id="@+id/firstQuestion"
        android:name="com.rishikeshwadkar.gamequiz.FirstQuestion"
        android:label="fragment_first_question"
        tools:layout="@layout/fragment_first_question" >
        <action
            android:id="@+id/action_firstQuestion_to_secondQuestion"
            app:destination="@id/secondQuestion" />
    </fragment>
    <fragment
        android:id="@+id/secondQuestion"
        android:name="com.rishikeshwadkar.gamequiz.SecondQuestion"
        android:label="fragment_second_question"
        tools:layout="@layout/fragment_second_question" >
        <action
            android:id="@+id/action_secondQuestion_to_startPlaying"
            app:destination="@id/startPlaying" />
    </fragment>
</navigation>